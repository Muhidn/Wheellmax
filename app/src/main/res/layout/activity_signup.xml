<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/peakpx"
    tools:context=".SignupActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:padding="20dp">

        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/signup_email"
            android:background="@drawable/lavender_boader"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="Email"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="8dp"/>

        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/signup_password"
            android:background="@drawable/lavender_boader"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="password"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/baseline_lock_open_24"
            android:drawablePadding="8dp"/>


        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/signup_confirm"
            android:background="@drawable/lavender_boader"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/baseline_lock_open_24"
            android:drawablePadding="8dp"/>
        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/signup_fullname"
            android:background="@drawable/lavender_boader"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="fullname"
            android:inputType="text"
            android:drawableLeft="@drawable/baseline_how_to_reg_24"
            android:drawablePadding="8dp"/>
        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/signup_address"
            android:background="@drawable/lavender_boader"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="address"
            android:inputType="text"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:drawablePadding="8dp"/>

        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:id="@+id/signup_phoneNumber"
            android:background="@drawable/lavender_boader"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="phoneNumber"
            android:inputType="text"
            android:drawableLeft="@drawable/baseline_local_phone_24"
            android:drawablePadding="8dp"/>
        <Button
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:text="Sign up"
            android:id="@+id/SignupButton"
            android:onClick="onClick"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:cornerRadius="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LoginRedirectText"
            android:text="Alreadu an user? Login"
            android:layout_gravity="center"
            android:padding="8dp"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/lavender_blue"
            />

    </LinearLayout>
</ScrollView>